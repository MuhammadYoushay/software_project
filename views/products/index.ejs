<%- include("../partials/header") %>

  <div class="d-flex justify-content-center">
    <img src="https://imgtr.ee/images/2023/12/03/5bb328e87623a23321619dbb51d57554.png" alt="Banner Image" class="img-fluid rotating-image fade-in" style="max-width: 90%; max-height: 300px; border-radius: 100%;">
  </div>

  <h3 style="text-align:center" class="mb-3"></h3>

  <div class="row">

  <% categories.forEach(category => { %>

    <a class="col-lg-3 col-md-6" href="/products/category/<%= category.replaceAll(" ","-") %>">
      <div class="category-container text-center mb-3">
        <span><%= category %></span>
      </div>
    </a>

  <% }) %>

  </div>

  <div class="row4" style="justify-content: space-between;"> 
    <div class="jumbotron45 text-center">
      <h3 style="text-transform: capitalize; background-color: black; color: white; border-radius: 10px; padding: 2px;">
        New Arrivals
      </h3>

      <div class="row3" style="padding-bottom: 20px; padding-top: 20px">
        <% newProducts.forEach(product => { %>
        <div class="col-6 col-md-6" >
            <div class="card-body1">
              <img class="resp-img1 pro-ind my-2" src="<%= product.image %>" alt="Card image">
              <h4  class="card-title a" style="color: black; font-weight: bold;" ><a href="/products/<%= product._id %>">
                <div class="card-title a" style="color: black; font-weight: bold;">
                  <%= product.name.substring(0,50) %><% if(product.name.length>50) {
                  %>&nbsp...<% } %>
                </div>
              </a>
            </h4>
              <p class="card-text">Rs.<%= product.price %></p>
            </div>
        </div>
        <% }); %>
      </div>

    </div>

    <div class="jumbotron45 text-center">
      <h3 style="text-transform: capitalize; background-color: black; color: white; border-radius: 10px; padding: 2px;">
        Top Trending
      </h3>

      <div class="row3-3" style="padding-bottom: 20px; padding-top: 20px;">
        <% trendingProducts.forEach(product => { %>
        <div class="col-6 col-md-6" >
            <div class="card-body1 p-2 p-lg-3"">
              <img class="resp-img1 pro-ind my-2" src="<%= product.image %>" alt="Card image">
              <h4  class="card-title a" style="color: black; font-weight: bold;"><a href="/products/<%= product._id %>">
                <div class="card-title a" style="color: black; font-weight: bold;">
                  <%= product.name.substring(0,50) %><% if(product.name.length>50) {
                  %>&nbsp...<% } %>
                </div>
              </a></h4>
              <p class="card-text">Rs.<%= product.price %></p>
            </div>
        </div>
        <% }); %>
      </div>

    </div>



  </div>

  <div class="row1" style="margin-top: 50px;">
    <div class="jumbotron25 text-center" style="padding: 30px; padding-top: 1; ">
      <h3 style="text-transform: capitalize; background-color: black; color: white; border-radius: 10px; padding: 2px;">
        Testimonials
      </h3>
      <div class="card-body3 mx-auto">
        <div class="testimonial">
          <img src="https://img.freepik.com/premium-vector/girl-s-face-with-beautiful-smile-female-avatar-website-social-network_499739-527.jpg" alt="Testimonial Avatar" class="testimonial-avatar">
          <p class="testimonial-text">"I loved the jewelry I bought from Zarqoon! The attention to detail is remarkable."</p>
          <p class="testimonial-author">- Sarah </p>
        </div>

      </div>

    </div>
    <div class="jumbotron30 text-center" style="padding: 30px; padding-top: 1; text-align: center;">
      <h3 style="text-transform: capitalize; background-color: black; color: white; border-radius: 10px; padding: 2px;">
        Our Services
      </h3>
      <div class="card-body3 mx-auto" style="text-align: center; justify-content: center; display: flex; flex-direction: column; align-items: center;">
        <li style="color: black; font-weight: bold; text-align:left; align-items: center; font-size: large; list-style: none; padding: 20px;"><i class="fa fa-globe"></i>
          Worldwide Delivery
        </li>
        <li style="color: black; font-weight: bold; text-align:left; align-items: center; font-size: large; list-style: none; padding: 20px;"> <i class="fa fa-phone"></i>
          24/7 Support
        </li>
        <li style="color: black; font-weight: bold; text-align:left; align-items: center; font-size: large; list-style: none; padding: 20px;"><i class="fa fa-money"></i>
          Best Discounts
        </li>
        <li style="color: black; font-weight: bold; text-align:left; align-items: center; font-size: large; list-style: none; padding: 20px;"><i class="fa fa-angle-left"></i>
          Best return policy
        </li>
      </div>
    </div>
    <div class="jumbotron435 text-center">
      <h3 style="text-transform: capitalize; background-color: black; color: white; border-radius: 10px; padding: 2px; margin-bottom: 2%; margin-top: -2%;">
        Deal of the Day
      </h3>
      <% if (trendingProducts.length > 0) { %>
      <div class="card-body2">
        <div class="row0">
          <div class="col-md-6" style="text-align: center; justify-content: center;">
            <img src="<%= trendingProducts[0].image %>" alt="Deal of the Day" class="resp-img2">
          </div>
          <div class="col-md-6">
            <a href="/products/<%= trendingProducts[0]._id %>">
            <h4 style="color: black; font-weight: bold; text-align:left; align-items: flex-start;"> <%= trendingProducts[0].name %></h4></a>
            <p style="text-align: left;"><%= trendingProducts[0].description %></p>
            <h6 style="color: black; text-align: left;" >
              <span class="mr-1">Rs.<%= trendingProducts[0].price %></span><br>
              <span class="nowrap">
                <span class="mrp mr-1">Rs.<%= trendingProducts[0].mrp %></span><br>
                <span class="disc" style="color: #8C8C88"><%= trendingProducts[0].disc_perc %>% off</span
                >
              </span>
            </h6>
            <div class="text-left">
              <a href="/products/<%= trendingProducts[0]._id %>">
              <button class="btn btn-sm btn-primary mr-md-1"
              style="color: white; background: black;">Claim The Offer Now!</button>
            </a>
            </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
  


<%- include("../partials/footer") %>

